{{! 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<main>
 {{#with main}}
     <article>
        {{> title big=true data='work history' }}
        <ul>
          {{#each works}}
          <li>
            <p>{{position}}</p>
            <p><b>{{company.name}}</b></p>          
            <p>{{duration.from}}-{{#if duration.to}} {{duration.to}}{{else}} (досі тут працюємо){{/if}}</p>
            <p>{{> link text=company.name href=company.url blank=true noLine=true }}</p>
            <p><strong> project ({{projectAmount}}) </strong></p>
         
            <ul>
              {{#each projects}}
              <li>
                <p> {{> link text=name href=url blank=true noLine=true }} </p>
                <p>{{about}}</p>
                <p><em> Projeck stacks ({{stackAmount}})</em></p>
                <p><ul>{{#each stack}}<li>{{name}}</li>{{/each}}</ul></p>
                <p><em> Projeck  awards</em></p>
                <p><ul>{{#each awards}}<li>{{name}}</li>{{/each}}</ul></p>
              </li>
              {{/each}}
            </ul>
          </li>
         {{/each}}
        </ul>
     </article>
  {{/with}}
</main>


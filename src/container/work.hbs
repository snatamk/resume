{{! 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<div>
 {{#with main}}
  <main>
     <section>
        {{> title big=true data='work history' }}
       <div>
        <ul>
          {{#each works}}
          <li>
            <div>{{position}}</div>
            <br>
            <div><b>{{company.name}}</b></div>
            <br>
            <div>{{duration.from}}-{{#if duration.to}} {{duration.to}}{{else}} (досі тут працюємо){{/if}}</div>
            <br>
            <div>{{> link text=company.name href=company.url blank=true noLine=true }}</div>
            <br>
            <br>
            <div><strong> project ({{projectAmount}}) </strong></div>
            <br> 
            <ul>
              {{#each projects}}
              <li>
                <div> {{> link text=name href=url blank=true noLine=true }} </div>
                <br>
                <div>{{about}}</div>
                <br>
                <div><em> Projeck stacks ({{stackAmount}})</em></div>
                <br>
                <div><ul>{{#each stack}}<li>{{name}}</li>{{/each}}</ul></div>
                <br>

                <div><em> Projeck  awards</em></div>
                <br>
                <div><ul>{{#each awards}}<li>{{name}}</li>{{/each}}</ul></div>
              </li>
              {{/each}}
            </ul>
          </li>
         {{/each}}
         </ul>
         
    </section>
  </main>
  {{/with}}
</div>


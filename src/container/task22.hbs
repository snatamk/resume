<header>
  {{#with page_header}}
    <h1 class='text-center'> {{title}} </h1>
    <p class='text-uppercase text-center'>
      {{description}}
    </p>
  {{/with}}
</header>

<section>
  {{#with section}}
    <div class='card'>
      <div class='card-body'>

        <section>
          {{#with about_us}}
            <div class='card'>
              <div class='card-body'>

                {{#with title_list}}
                  <p class='display-6 text-end'>
                    {{main}}
                  </p>
                  <h2 class='text-end'> {{sub}} </h2>
                {{/with}}

                {{#with button}}
                  <button class='btn btn-outline-info'>
                    {{text}}
                  </button>
                {{/with}}

              </div>
            </div>
          {{/with}}
        </section>

        <section>
          {{#with advantage}}
            <div class='card'>
              <div class='card-body'>
                <p class='display-5'> {{title}} </p>

                {{#with efficiency}}
                  <div class='card'>
                    <div class='card-body'>
                      <p class='display-4'> {{title}} </p>
                      <h6> {{sub_title}} </h6>
                      <p> {{description}} </p>

                      <button
                        class='btn btn-outline-warning'
                      >
                        {{button}}
                      </button>

                    </div>
                  </div>
                {{/with}}

                {{#with innovation}}
                  <div class='card my-2'>
                    <div class='card-body'>
                      <p class='display-4 text-center'>
                        {{title}}
                      </p>
                      <h6 class='text-center'>
                        {{sub_title}}
                      </h6>
                      <p class='text-center'>
                        {{description}}
                      </p>

                      <button
                        class='btn btn-outline-warning'
                      >
                        {{button}}
                      </button>

                    </div>
                  </div>
                {{/with}}

                {{#with collaboration}}
                  <div class='card'>
                    <div class='card-body'>
                      <p class='display-4 text-end'>
                        {{title}}
                      </p>
                      <h6 class='text-end'>
                        {{sub_title}}
                      </h6>
                      <p class='text-end'>
                        {{description}}
                      </p>

                      <button
                        class='btn btn-outline-warning'
                      >
                        {{button}}
                      </button>

                    </div>
                  </div>
                {{/with}}
              </div>
            </div>
          {{/with}}
        </section>

        <section>
          {{#with agreement}}
            <div class='card'>
              <div class='card-body'>
                <p class='display-5'> {{title}} </p>

                {{#with info}}
                  <div class='card'>
                    <div class='card-body'>
                      <h5> {{sub_title}} </h5>
                      {{#with detail}}
                        <p> {{text}} </p>
                        <button class='btn btn-success'>
                          {{button}}
                        </button>
                      {{/with}}
                    </div>
                  </div>
                {{/with}}

              </div>
            </div>
          {{/with}}
        </section>
      </div>
    </div>
  {{/with}}
</section>
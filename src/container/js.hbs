<main>
  <div class='ms-4'>
    <h1 class='text-center'>
      <strong> <u> {{name}} </u> </strong>
    </h1>
    <p> <b> {{description}} </b> </p>
    <p>
      <b class='text-info'> history: </b>
      {{#with history}}
        year-{{year}}
        ; founder-{{founder}}.
      {{/with}}
    </p>

    <div class='row'>
      <table>
        <tr>
          <div class='col-4'>
            <td class='pb-4'>
              <p class='text-secondary ps-2'>
                <b> types: </b>
              </p>
              <ul>
                {{#each types}}
                  <li> {{this}} </li>
                {{/each}}
              </ul>
            </td>
          </div>

          <div class='col-4'>
            <td>
              <p class='text-secondary'>
                <b> libraries: </b>
                <ul>
                  {{#each libraries}}
                    <li> {{this}} </li>
                  {{/each}}
                </ul>
              </p>
            </td>
          </div>

          <div class='col-4'>
            <td>
              <p class='text-secondary'>
                <b> tools: </b>
              </p>
              <ul>
                {{#each tools}}
                  <li> {{this}} </li>
                {{/each}}
              </ul>
            </td>
          </div>
        </tr>
      </table>
    </div>

    <p class='text-secondary'>
      <b> syntax: </b>
      {{#with syntax}}
        <table>
          <tr>
            <td>
              <ul>
                <mark>
                  <i> variables: </i>
                </mark>
                {{#each variables}}
                  <li> {{this}} </li>
                {{/each}}
              </ul>
            </td>

            <td class='pb-5'>
              <ul>
                <mark> <i> functions: </i> </mark>
                {{#each functions}}
                  <li> {{this}} </li>
                {{/each}}
              </ul>
            </td>

            <td>
              <ul>
                <mark> <i> conditionals: </i> </mark>
                {{#each conditionals}}
                  <li> {{this}} </li>
                {{/each}}
              </ul>
            </td>

            <td>
              <ul>
                <mark> <i> loops: </i> </mark>
                {{#each loops}}
                  <li> {{this}} </li>
                {{/each}}
              </ul>
            </td>

            <td class='pb-5'>
              <ul>
                <mark> <i> classes: </i> </mark>
                {{#each classes}}
                  <li> {{this}} </li>
                {{/each}}
              </ul>
            </td>
          </tr>
        </table>
      {{/with}}
    </p>
    <p class='text-secondary'> <b> features: </b> </p>
    <ul>
      {{#each features}}
        <li> {{this}} </li>
      {{/each}}
    </ul>

    <p class='text-secondary'> <b> community: </b> </p>
    <ul>
      {{#each community}}
        <li> {{name}}{{type}} </li>
      {{/each}}
    </ul>
  </div>
</main>
<main>
  <div>
    <h1 class='text-center'>
      <strong> <u> {{name}} </u> </strong>
    </h1>
    <p> <b> {{description}} </b> </p>
    <p>
      <b class='text-info'> history: </b>
      {{#with history}}
        year-{{year}}
        ; founder-{{founder}}.
      {{/with}}
    </p>

    <table>
      <tr>
        <td>
          <p class='text-secondary'> <b> types: </b> </p>
          <ul>
            {{#each types}}
              <li> {{this}} </li>
            {{/each}}
          </ul>
          <br />
        </td>

        <td>
          <p class='text-secondary'>
            <b> libraries: </b>
            <ul>
              {{#each libraries}}
                <li> {{this}} </li>
              {{/each}}
            </ul>
          </p>
        </td>

        <td>
          <p class='text-secondary'> <b> tools: </b> </p>
          <ul>
            {{#each tools}}
              <li> {{this}} </li>
            {{/each}}
          </ul>
        </td>
      </tr>
    </table>

    <p class='text-secondary'>
      <b> syntax: </b>
      {{#with syntax}}
        <table>
          <tr>
            <td>
              <ul>
                <mark> <i> variables: </i> </mark>
                {{#each variables}}
                  <li> {{this}} </li>
                {{/each}}</ul>
            </td>

            <td>
              <ul>
                <mark> <i> functions: </i> </mark>
                {{#each functions}}
                  <li> {{this}} </li>
                {{/each}}</ul>
              <br />
              <br />
            </td>

            <td>
              <ul>
                <mark> <i> conditionals: </i> </mark>
                {{#each conditionals}}
                  <li> {{this}} </li>
                {{/each}}</ul></td>

            <td>
              <ul>
                <mark> <i> loops: </i> </mark>
                {{#each loops}}
                  <li> {{this}} </li>
                {{/each}}</ul></td>

            <td>
              <ul>
                <mark> <i> classes: </i> </mark>
                {{#each classes}}
                  <li> {{this}} </li>
                {{/each}}
              </ul>
              <br />
              <br />
            </td>
          </tr>
        </table>
      {{/with}}
    </p>
    <p class='text-secondary'> <b> features: </b> </p>
    <ul>
      {{#each features}}
        <li> {{this}} </li>
      {{/each}}
    </ul>

    <p class='text-secondary'> <b> community: </b> </p>
    <ul>
      {{#each community}}
        <li> {{name}}{{type}} </li>
      {{/each}}
    </ul>
  </div>
</main>
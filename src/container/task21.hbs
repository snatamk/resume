<main>
  <section>
    {{#with heading}}
      <div class='card'>
        <div class='card-body'>
          {{#with main}}
            <div class='card my-2'>
              <div class='card-body'>
                <h1> {{title}} </h1>
                <p> {{text}} </p>
                {{#with button_text}}
                  <div class='col-3'>
                    <button class='btn btn-primary'>
                      <span> {{solid}} </span>
                    </button>
                    <button
                      class='btn btn-outline-primary mt-2'
                    >
                      <span> {{outline}} </span>
                    </button>
                  </div>
                {{/with}}
              </div>
            </div>
          {{/with}}

          {{#with second}}
            <div class='card my-2'>
              <div class='card-body'>
                <h2>{{title}} </h2>
                <p> {{text}} </p>
                {{#with button_text}}
                  <div class='col-3'>
                    <button class='btn btn-secondary'>
                      <span> {{solid}} </span>
                    </button>
                    <button
                      class='btn btn-outline-secondary mt-2'
                    >
                      <span> {{outline}} </span>
                    </button>
                  </div>
                {{/with}}
              </div>
            </div>
          {{/with}}

          {{#with subblock}}
            <div class='card'>
              <div class='card-body'>
                <h3>{{title}} </h3>
                <p> {{text}} </p>
                {{#with button_text}}
                  <div class='col-3'>
                    <button class='btn btn-dark'>
                      <span> {{solid}} </span>
                    </button>
                    <button
                      class='btn btn-outline-dark mt-2'
                    >
                      <span> {{outline}} </span>
                    </button>
                  </div>
                {{/with}}
              </div>
            </div>
          {{/with}}
        </div>
      </div>
    {{/with}}
  </section>

  <section>
    {{#with nested_display}}
      <div class='card'>
        <div class='card-body'>
          <div class='display-1 mb-2'> {{title}} </div>

          {{#with children_display}}
            <div class='card'>
              <div class='card-body'>
                <div class='display-4'> {{title}} </div>
                <p> {{text}} </p>

                {{#with button}}
                  <button class='btn btn-outline-warning'>
                    <span> {{text}} </span>
                  </button>
                {{/with}}

              </div>
            </div>
          {{/with}}

          <h6 class='my-2'> {{header_text}} </h6>

          {{#with button}}
            <button class='btn btn-info'>
              <span> {{text}} </span>
            </button>
          {{/with}}
        </div>
      </div>
    {{/with}}
  </section>

  <section>
    {{#with paragraph}}
      <div class='card'>
        <div class='card-body'>
          <p class='text-uppercase'> {{title}} </p>
          <p class='text-lowercase'> {{text}} </p>
          {{#with button}}
            <button class='btn btn-link'>
              <a href='{{url}}' class='btn btn-link'>
                {{text}}
              </a>
            </button>
          {{/with}}

          <div class='card'>
            <div class='card-body'>
              <ul>
                {{#each list_name}}
                  <li>
                    <button class='btn btn-link'>
                      <a href='{{url}}'> {{text}} </a>
                    </button>
                  </li>
                {{/each}}
              </ul>
            </div>
          </div>
        </div>
      </div>
    {{/with}}
  </section>
</main>
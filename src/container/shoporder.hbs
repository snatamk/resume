<main>
  <div class='row'>
    <nav>
      <hr />
      {{#with navigation}}
        <div class='nav nav-tabs'>
          <div class='col-5'>
            <h1 class=''> {{Logo}} </h1>
          </div>
          <p class='ps-5'>
            {{#each links}}
              <p class='nav-item'>
                <a href='{{href}}' target='_blank' class='nav-link'>
                  {{text}}
                </a>
              </p>
            {{/each}}
          </p>
        </div>
      {{/with}}
    </nav>

    <div class='col-12'>
      <h2 class='mb-4'> {{header}} </h2>
      <div class='row'>
        <div class='col-8'>
          {{#with contacts_data}}
            <h4 class='mb-3'> {{title}} </h4>

            {{#each buttons}}
              {{#if isPrimary}}
                <button class='btn btn-warning text-light mb-4'>
                  {{text}} </button>
              {{/if}}
              {{#if isOutline}}
                <button class='btn btn-outline-warning mb-4'>
                  {{text}} </button>
              {{/if}}
            {{/each}}

              <div class='row m-0'>
                {{#with form}}
                  {{#with input}}
                    {{#with surname}}
                      <div class='col-6 mb-4'>
                        <label class='form-label m-0'>
                          <small> {{label}} </small>
                        </label>
                        <input placeholder='{{placeholder}}'
                          class='form-control form-control-sm'/>
                        <div class='form-text m-0'>
                          <small> {{caption}} </small> </div>
                      </div>
                    {{/with}}
                    {{#with name}}
                      <div class='col-6'>
                        <label class='form-label m-0'>
                          <small> {{label}} </small>
                        </label>
                        <input placeholder='{{placeholder}}'
                          class='form-control form-control-sm'/>
                        <div class='form-text m-0'>
                          <small> {{caption}} </small> </div>
                      </div>
                    {{/with}}
                    {{#with phone}}
                      <div class='col-6'>
                        <label class='form-label m-0'>
                          <small> {{label}} </small>
                        </label>
                        <input placeholder='{{placeholder}}'
                          class='form-control form-control-sm'/>
                        <div class='form-text m-0'>
                          <small> {{caption}} </small> </div>
                      </div>
                    {{/with}}
                    {{#with email}}
                      <div class='col-6'>
                        <label class='form-label m-0'>
                          <small>{{label}}</small>
                        </label>
                        <input placeholder='{{placeholder}}'
                          class='form-control form-control-sm'/>
                        <div class='form-text m-0'>
                          <small>{{caption}}</small></div>
                      </div>
                    {{/with}}
                  {{/with}}

                  <hr class='my-3' />

                  {{#each switch}}
                    <div class='form-check form-switch m-0 py-2'>
                      {{#unless isActive}}
                        <label class='form check-label' >{{text}}</label>
                        <input type='checkbox' class='form-check-input'/>
                      {{/unless}}
                      {{#if isActive}}
                        <label class='form check-label'>{{text}}</label>
                        <input type='checkbox' class='form-check-input'/>
                      {{/if}}
                    </div>
                  {{/each}}
                {{/with}}
              </div>
            {{/with}}
            <hr class='my-3' />
           
            {{#with delivery}}
                <h4> {{title}}</h4>
                <div class="card">
                  <div class="card-body">
                    <div class="row">
                      {{#each select}}
                          <div class="col-6">
                            <label  class="form-label m-0"><small>{{label}}</small></label>
                          {{> placeholder}}
                        </div>  
                      {{/each}}
                    </div>
                  </div>
                </div>
                            
                <div class="form-check">
                    {{#each delivery_type}}
                     <div class="row py-2">
                      <div class="col-6">
                         <label class="form-check-label"><small>{{type}}</small> </label>
                         <input name="delivery" type="radio" class="form-check-input">
                      </div>
                      <div class="col-6">
                         <label class="form-check-label"><small>{{value}}</small> </label>
                      </div>
                     </div>
                    {{/each}}                  
                </div>
                <hr class="my-3">
                <div class="form-check">
                  <h4> Оплата</h4>
                  {{#each payment}}
                    <div class="py-2">
                      <label class="form-check-label">{{type}}</label>                     
                    <input name="payment" type="radio" class="form-check-input">
                    <p><small>{{description}}</small></p>
                    </div>
                  {{/each}}
                </div>
                <hr class="my-2">
                {{#with contact}}
                <div class="row">
                  <h4>{{title}}</h4>
                    {{#with surname}}
                      <div class='col-6 mb-4'>
                        <label class='form-label m-0'><small>{{label}}</small>
                        </label>
                        <input placeholder='{{placeholder}}'
                          class='form-control form-control-sm'/>
                        <div class='form-text m-0'><small>{{caption}}</small>
                        </div>
                      </div>
                    {{/with}}
                    {{#with name}}
                      <div class='col-6'>
                        <label class='form-label m-0'><small>{{label}}</small>
                        </label>
                        <input placeholder='{{placeholder}}'
                          class='form-control form-control-sm'/>
                        <div class='form-text m-0'><small> {{caption}}</small>
                        </div>
                      </div>
                    {{/with}}
                    {{#with phone}}
                      <div class='col-6'>
                        <label class='form-label m-0'><small>{{label}}</small>
                        </label>
                        <input placeholder='{{placeholder}}'
                          class='form-control form-control-sm'/>
                        <div class='form-text m-0'><small>{{caption}}</small>
                        </div>
                      </div>
                    {{/with}}
                    {{#with email}}
                      <div class='col-6'>
                        <label class='form-label m-0'><small>{{label}}</small>
                        </label>
                        <input placeholder='{{placeholder}}'
                          class='form-control form-control-sm'/>
                        <div class='form-text m-0'><small>{{caption}}</small>
                        </div>
                      </div>
                    {{/with}}
                </div>
                {{/with}}

                <hr class="my-3">
                {{#with coment}}
                    <label class="form-label m-0"><small>{{label}}</small></label>
                    <input placeholder="{{placeholder}}" class="form-control form-control-sm">
                {{/with}}        
              {{/with}}
              <hr class="my-4">
             {{#with coupon}}
                <h4>{{title}}</h4>
                {{#with select}}
                  {{#with availabel_coupon}}
                    <label class="form-label m-0"><small>{{label}}</small></label>
                    <select class="form-select form-select-lg">
                      <option>{{placeholder}}</option>
                     {{#each options}}
                       <option value="{{value}}">{{text}}</option>
                     {{/each}}
                   </select>
                 {{/with}}
              
                 {{#with friend_coupon}}
                    <label class="form-label m-0 pt-3"><small>{{label}}</small></label>
                    <select class="form-select form-select-sm ">
                      <option>{{placeholder}}</option>
                      {{#each options}}
                        <option value="{{value}}">{{text}}</option>
                      {{/each}}
                    </select>
                 {{/with}}
               {{/with}}
               {{#with add}}
                  {{#with friend}}
                    <div class="mt-3">
                      <label class="form-label m-0"><small>{{label}}</small></label>
                      <input placeholder="{{placeholder}}"
                       class="form-control form-control-lg">
                      <div class="form-text m-0"><small>{{caption}}</small></div>
                    </div>
                  {{/with}}
                  {{#with colleague}}
                    <div class="col-11 mt-3">
                      <label class="form-label m-0"><small>{{label}}</small></label>
                      <input placeholder="{{placeholder}}" 
                      class="form-control form-control-sm">
                      <div class="form-text m-0"><small>{{caption}}</small></div>
                    </div>
                  {{/with}}
               {{/with}}
             {{/with}}
            <hr class="my-3">
             {{#with quiz}}
                <h5>{{title}}</h5>
                {{#with preference}}
                  <p><small>{{title}}</small></p>
                  <div class="form-check">
                    {{#each options}}
                      <div class="col-3">
                        <label class="form-check-label">{{this}}</label>
                        <input name="gadget" type="radio" 
                        class="form-check-input">
                      </div>
                   {{/each}}
                  </div>
                {{/with}}
                <div class="form-check mt-3">
                  {{#with your_expirience}}
                    <label class="form-check-label"><small>{{label}}</small></label>
                    <input class="form-control ">
                  {{/with}}
                </div>
                <div class="form-check mt-3">
                  {{#with purchase_frequency}}
                    <label class="form-label m-0"><small>{{label}}</small></label>
                    <select class="form-select">
                     <option>{{placeholder}}</option>
                      {{#each options}}
                       <option value="{{value}}">{{text}}</option>
                      {{/each}}
                    </select>
                  {{/with}}
                </div>
                {{#with factors}}
                  <p class="mt-4"><small>{{title}}</small></p>
                  <div class="form-check">
                    {{#each options}}
                     <div class="col-6">
                        <label class="form-check-label"><small>{{this}}</small></label>
                        <input name="factor" type="checkbox" 
                        class="form-check-input">
                      </div>
                    {{/each}}
                  </div>
                {{/with}}
              {{/with}} 
            </div>

          <div class='col-4'>
            <div class='card my-2'>
              <div class='card-body'>
                {{#each action_block}}
                  {{#if isPrimary}} 
                    <button class='btn btn-success btn-sm mb-2'> 
                      <small>{{text}}</small> 
                    </button>
                  {{/if}}
                  {{#if isDanger}}
                    <button class='btn btn-danger mb-2'> {{text}} </button>
                  {{/if}}
                  {{#if isInfo}}
                  <button class='btn btn-info text-light'> {{text}} </button>
                {{/if}}
              {{/each}}
            </div>
          </div>

          <div class='card'>
            <div class='card-body'>
              {{#with total}}
                <h4> {{title}}</h4>
                <ul class="list-group">
                  {{#each item_list}}
                    <li class="list-group">
                    <small> {{name}}: {{price}} </small>
                    </li>
                  {{/each}}
                </ul>

                <hr class="my-2">

                <ul class="list-group">
                  {{#each additional_info}}
                    <li class="list-group">
                      <small> <small>{{text}}</small>: 
                      {{value}} </small>
                    </li>
                  {{/each}}
                </ul>

                <hr class="my-2">

                <ul class="list-group">
                  {{#with total_price}}
                    <li class="list-group">
                      <small> <small> {{text}} </small>:
                        {{value}} </small>
                    </li>
                  {{/with}}
                </ul>

                <hr class="my-2">

                {{#each button}}
                  {{#if isPrimary}}
                  <button class="btn btn-primary btn-sm"> 
                    <small> <small> {{text}} </small>
                  </button> {{/if}}
                  {{#if isOutline}} 
                    <button class="btn btn-outline-primary btn-sm mt-2">
                    <small> {{text}} </small> 
                  </button> {{/if}}
                {{/each}}
              {{/with}}
          </div>
        </div>
      </div>
      <hr class="mt-5">
      {{> shopfooter}}
    </div>
  </div>
</main>



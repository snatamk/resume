{{#with main}}
    <main>
        <section>
            {{> title big=true data='My education'}}
            <ul>
               {{#each education}}
                <li>
                    {{name}}

                    {{#unless isEnd}} (ще в процесі) {{/unless}}
                </li>
                {{/each}}
            </ul>
        </section>
        <section>
             {{> title big=false data='My certificates'}}
             <ul>
                {{#each certificates}}
                    <li>
                        {{name}} ({{id}})
                    </li>
                {{/each}}
             </ul>
        </section>
    </main>
{{/with}}
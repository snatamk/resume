<div>
    {{#with main}}
        <main>
            <article>
                {{> title big=true data='My educationss'}}
                <ul>
                {{#each education}}
                    <li>
                        {{name}}

                        {{#unless isEnd}} (ще в процесі) {{/unless}}
                    </li>
                    {{/each}}
                </ul>
            </article>
            <article>
                {{> title big=false data='My certificates'}}
                <ul>
                    {{#each certificates}}
                        <li>
                            {{name}} ({{id}})
                        </li>
                    {{/each}}
                </ul>
            </article>
        </main>
    {{/with}}
</div>
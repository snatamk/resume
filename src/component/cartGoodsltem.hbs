<div class='card my-4'>
  <div class='card-body'>
    <div class='row'>
      <div class='col-2'>
        <img
          class='card-img-top mt-3'
          src='{{image}}'
          alt='{{name}}'
        />
      </div>
      <div class='col-5'>
        <h5>{{name}}</h5>
        <span>{{description}}</span>
      </div>
      <div class='col-2'>
        {{#with price}}
          <p class='mt-3'>{{title}}:</p>
          <h5>{{value}}</h5>
        {{/with}}
      </div>
      <div class='col-1'>
        <p class='mt-4'>{{amount}}</p>
      </div>
      <div class='col-1'>
        {{#each buttons}}
          {{#if isPrimary}}
            <button class='btn btn-primary'>
              {{text}}
            </button>
          {{/if}}
          {{#if isDanger}}
            <button class='btn btn-outline-danger mt-4'>
              {{text}}
            </button>
          {{/if}}
        {{/each}}
      </div>
    </div>
  </div>
</div>